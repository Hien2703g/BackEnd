mixin product-item(item)
    .product-item 
        a(href=`/products/detail/${item.slug}`)
            .inner-image 
                img(
                    src= item.thumbnail
                    alt= item.title
                )
                if(item.featured=="1")
                    .inner-featured Nổi bật
            .inner-content 
                h3.inner-title  #{item.title} 
                .inner-price-new Price new:#{item.priceNew}$
                .inner-price-old  Price old:#{item.price}$
                .inner-discount Discount: -#{item.discountPercentage}%
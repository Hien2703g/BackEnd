extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main 
    .main
        .container.my-3 
            include ../../partials/list-btn-users.pug
        .row 
            .col-12 
                +box-head("Danh sach nguoi dung")
        .row 
            each user in users
                .col-6 
                    div(class="box-user")
                        div(class="inner-avatar")
                            img(
                                src=(user.avatar? user.avatar:"https://res.cloudinary.com/dyppifz1z/image/upload/v1747908416/bbt0u0sge20rhgmlmwvv.png")
                                alt=user.fullName
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{user.fullName}
                            div(class="inner-buttons")
                                button(
                                    class="btn btn-sm btn-primary mr-1"
                                    btn-add-friend=user.id
                                ) Kết bạn 
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-cancel-friend=user.id
                                ) Hủy
block script 
    script(src="/Client/Js/social.js")
extends ../../layouts/default.pug 
include ../../mixins/alert.pug

block main 
    +alert-error(5000)
    +alert-success(5000)

    h1(class="mb-4") Chỉnh sửa sản phẩm


    form(
        action=`${prefixAdmin}/products-category/edit/${records.id}?_method=PATCH`
        id="form-edit-products_category"
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                value=records.title
            ) 
        div(class="form-group")
            label(for="desc") Mô tả
            textarea(
                class="form-control"
                id="desc"
                name="description"
                rows="5"
                value=records.description
            ) #{records.description}
        div(
            class="form-group"
            upload-image
        )
            label(for="thumbnail")  Ảnh
            input(
                type="file"
                class="form-control-file"
                id="thumbnail"
                name="thumbnail"
                accept="image/*"
                upload-image-input
            )
            img(
                class="image-preview"
                src=records.thumbnail
                upload-image-preview
            ) 

        div(class="form-group")
            label(for="position") Vị trí
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                placeholder="Tự động tăng"
                min="1"
                value=records.position
            )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked=(records.status=="active"?true:false)
            )
            label(for="statusActive" class="form-check-label") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInActive"
                name="status"
                value="inactive"
                checked=(records.status=="inactive"?true:false)
            )
            label(for="statusInActive" class="form-check-label") Dừng hoạt động

        div(class="form-group")
            a(
                href=`${prefixAdmin}/products-category`
                class="btn btn-warning"
            ) Tro ve
            button(
                type="submit"
                class="btn btn-primary"
            ) Update

    script(src="/Admin/Js/productCategoryScript.js")
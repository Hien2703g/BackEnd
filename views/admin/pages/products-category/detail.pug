extends ../../layouts/default.pug 


block main 
    if(records.title)
        h1(class="mb-4") #{records.title}
    if(records.thumbnail)
        div(class="mb-4") 
            img(
                src=records.thumbnail
                style="width:150px"
            )
    if(records.status)
        div(class="mb-4")
            span Trang thai: 
            if(records.status=="active")
                span(class="badge badge-success") Hoat dong
            else 
                span(class="badge badge-danger") Dung hoat dong
    if(records.position)
        div(class="mb-4") <b> #{records.position}</b>
    if(records.description)
        div(class="mb-4")  !{records.description}
    div(class="form-group")
        a(
            href=`${prefixAdmin}/products-category`
            class="btn btn-warning"
        ) Tro ve
        a(
            href=`${prefixAdmin}/products-category/edit/${records.id}`
            class="btn btn-danger btn-sm"
        ) Sua
    script(src="/Admin/Js/producCategorytScript.js")

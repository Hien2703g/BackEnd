extends ../../layouts/default.pug 
//- include ../../mixins/box-head.pug

block main
    if(role.permissions.includes("orders_view"))
        .container.my-3 
            .row
                .col-12 
                    h1 #{pageTitle}
            if(order)
                .row  
                    .col-12 
                        h4(class="mb-2") Thông tin cá nhân 
                        table(class="table table-bordered")
                            tbody 
                                tr 
                                    td Họ tên 
                                    td 
                                        b #{order.userInfo.fullName}
                                tr 
                                    td Số điện thoại 
                                    td 
                                        b #{order.userInfo.phone}
                                tr 
                                    td Địa chỉ 
                                    td 
                                        b #{order.userInfo.address}
                                tr 
                                    td Trạng thái đơn hàng 
                                    td 
                                        if(order.status == "initial")
                                            span(class="badge text-bg-light") Chuẩn bị
                                        else if(order.status == "handle")
                                            span(class="badge text-bg-warning") Đang xử lý
                                        else if(order.status == "complete")
                                            span(class="badge text-bg-success") Đã hoàn thành 
                                        else 
                                            span(class="badge text-bg-danger") Từ chối

            .row  
                .col-12 
                    h4(class="mb-2") Thông tin đơn hàng
                    table(class="table table-bordered")
                        thead 
                            tr 
                                th STT 
                                th Ảnh 
                                th Tên 
                                th Giá
                                th Số lượng 
                                th Tổng tiền 
                        tbody 
                        if(order.products.length > 0)
                            each item, index  in order.products
                                tr 
                                    td #{index + 1}
                                    td 
                                        img(src=item.productInfo.thumbnail, alt=item.productInfo.title width="80px")
                                    td #{item.productInfo.title}
                                    td #{item.priceNew}$
                                    td #{item.quantity}
                                    td #{item.totalPrice}$
                    if(order.products.length > 0)
                        h3(class="text-end") Tổng đơn hàng: #{order.totalPrice}$

                    a(
                        href=`${prefixAdmin}/orders`
                        class="btn btn-warning"
                    ) Trở về
    else 
        h1 Bạn không có quyền 